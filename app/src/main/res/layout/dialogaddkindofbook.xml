<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:padding="5dp"
    android:background="@drawable/background_them2"
    android:orientation="vertical">

    <TextView
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/colorXanhSang"
        android:gravity="center_horizontal"
        android:id="@+id/titleThemLoai"
        android:text="Add "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText

            android:id="@+id/etSoluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/vekhungnhap2"
            android:drawableTint="@color/colorXanhSang"
            android:hint="Enter "
            android:padding="12dp"
            android:textColor="@color/colorXanhSang"
            android:textColorHint="@color/colorXanhSang"
            android:textSize="16dp" />



        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/btnsoluong"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/khunglogin"
            android:text="Add"
            android:textColor="@color/white"
            app:backgroundTint="@null" />



        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/xoaTextxoluong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColorHint="@color/colorXanhSang"
            android:layout_gravity="center"
            android:textColor="@color/colorXanhSang"/>




    </LinearLayout>
</LinearLayout>